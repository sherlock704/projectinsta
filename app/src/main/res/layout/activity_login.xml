<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab"
    tools:context=".Login">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:textColor="#100F0F"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:padding="25dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_margin="10dp"
            android:layout_marginTop="250dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Username"
                android:id="@+id/editUserName"
                android:textColor="#F1F1F1"
                android:textSize="20dp"
                android:textColorHint="#FDF8F8"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:layout_marginTop="250dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_margin="10dp"
            android:layout_marginTop="250dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Mobile number"
                android:id="@+id/editMobileNumber"
                android:textColor="#F5F2F2"
                android:textSize="20dp"
                android:textColorHint="#F7F6F6"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:layout_marginTop="250dp"
                />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_margin="10dp"
            android:layout_marginTop="250dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Email"
                android:id="@+id/editEmail"
                android:textColor="#F5F2F2"
                android:textSize="20dp"
                android:textColorHint="#F7F6F6"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:layout_marginTop="250dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_margin="10dp"
            android:layout_marginTop="250dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Password"
                android:id="@+id/editPassword"
                android:textColor="#F5F2F2"
                android:textSize="20dp"
                android:textColorHint="#F7F6F6"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:layout_marginTop="250dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/edit_text_shape"
            android:backgroundTint="	#FFDAB9"
            android:text="Register"
            android:textColor="#06050B"
            android:textSize="20dp"
            android:textStyle="normal" />


    </LinearLayout>


</RelativeLayout>